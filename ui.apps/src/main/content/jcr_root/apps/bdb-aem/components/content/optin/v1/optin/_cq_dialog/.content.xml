<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Opt-in Component"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}false">
                <items jcr:primaryType="nt:unstructured">
                    <newsletterRegistration
                        jcr:primaryType="nt:unstructured"
                        jcr:title="optin"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <newsLetterRegImagePath
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                fieldDescription="News Letter Image Path"
                                                fieldLabel="Image Path"
                                                name="./newsLetterRegImagePath"
                                                rootPath="/content/dam/bdb"/>
                                            <imageLinkUrl
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                                fieldDescription="Image Link URL"
                                                fieldLabel="Image Link URL"
                                                name="./imageLinkUrl"
                                                rootPath="/content"/>
                                            <openNewImageLinkTab
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                fieldDescription="Check to open link in New Tab. By default, link opens in same tab."
                                                name="./openNewImageLinkTab"
                                                text="Open Link in New Tab"
                                                uncheckedValue="{Boolean}false"
                                                value="{Boolean}true"/>
                                            <newsLetterRegImageAltTxt
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="News Letter Image Alt Txt"
                                                fieldLabel="Image Alt Text"
                                                name="./newsLetterRegImageAltTxt"/>
                                            <newsLetterRegHeading
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="News Letter Heading"
                                                fieldLabel="News Letter Heading"
                                                name="./newsLetterRegHeading"/>
                                            <newsLetterRegDesc
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                fieldDescription="News Letter Description"
                                                fieldLabel="News Letter Description"
                                                name="./newsLetterRegDesc"
                                                useFixedInlineToolbar="{Boolean}true">
                                                <rtePlugins
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceSuperType="/apps/bdb-aem/components/authoring/dialog/richtext/rtePlugins"/>
                                                <uiSettings
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceSuperType="/apps/bdb-aem/components/authoring/dialog/richtext/uiSettings"/>
                                            </newsLetterRegDesc>
                                            <newsLetterRegLatestHeading
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Latest Article Heading"
                                                fieldLabel="Latest Article Heading"
                                                name="./newsLetterRegLatestHeading"/>
                                            <newsLetterRegLatestDate
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Latest Article Date"
                                                fieldLabel="Latest Article Date"
                                                name="./newsLetterRegLatestDate"/>
                                            <newsLetterRegLatestArticle
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Latest Article Name"
                                                fieldLabel="Latest Article Name"
                                                name="./newsLetterRegLatestArticle"/>
                                            <newsLetterRegLatestArticleLink
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                                fieldDescription="Latest Article Link"
                                                fieldLabel="Latest Article Link"
                                                name="./newsLetterRegLatestArticleLink"
                                                rootPath="/content/bdb"/>
                                            <newsLetterRegViewAllTxt
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="View All Articles Text"
                                                fieldLabel="View All Articles Text"
                                                name="./newsLetterRegViewAllTxt"/>
                                            <newsLetterRegViewAllUrl
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                                fieldDescription="View All Articles Link"
                                                fieldLabel="View All Articles Link"
                                                name="./newsLetterRegViewAllUrl"
                                                rootPath="/content/bdb"/>
                                            <rootURL
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Enter the Root URL."
                                                fieldLabel="Root URL"
                                                name="./rootURL"
                                                required="{Boolean}true"/>
                                            <munchkinID
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Enter the Munchkin ID."
                                                fieldLabel="MunchkinID"
                                                name="./munchkinID"
                                                required="{Boolean}true"/>
                                            <formID
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Enter the Form ID."
                                                fieldLabel="FormID"
                                                name="./formID"
                                                required="{Boolean}true"/>
                                            <sectiondescription
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Enter the Form title."
                                                fieldLabel="Section Description"
                                                name="./formTitle"/>
                                        	<modalTitle
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Modal Title"
                                                fieldLabel="Modal Title"
                                                name="./modalTitle"
                                                required="{Boolean}true"/>
                                        	<modalDescription
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                fieldDescription="Modal Description"
                                                fieldLabel="Modal Description"
                                                name="./modalDescription"
                                                required="{Boolean}true"
                                                useFixedInlineToolbar="{Boolean}true">
                                                <rtePlugins
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceSuperType="/apps/bdb-aem/components/authoring/dialog/richtext/rtePlugins"/>
                                                <uiSettings
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceSuperType="/apps/bdb-aem/components/authoring/dialog/richtext/uiSettings"/>
                                            </modalDescription>
                                        	<modalButtonText
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Modal Button Text"
                                                fieldLabel="Modal Button Text"
                                                name="./modalButtonText"
                                                required="{Boolean}true"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </newsletterRegistration>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
