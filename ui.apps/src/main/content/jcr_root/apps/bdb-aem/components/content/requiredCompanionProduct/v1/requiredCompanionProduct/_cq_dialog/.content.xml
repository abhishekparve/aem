<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Required Companion Products"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <properties
                jcr:primaryType="nt:unstructured"
                jcr:title="Properties"
                sling:resourceType="granite/ui/components/coral/foundation/container"
                margin="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <componentTitle
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
										fieldDescription="Required Companion Heading"
                                        fieldLabel="Required Companion Heading"
                                        name="./heading"/>
                                    <description
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="/libs/granite/ui/components/coral/foundation/form/textarea"
										fieldDescription="Description"
                                        fieldLabel="Description"
                                        name="./description"/>
                                    <showMore
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
										fieldDescription="Show More Label"
                                        fieldLabel="Show More Label"
                                        name="./showMoreLabel"/>
                                    <showLess
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
										fieldDescription="Show Less Label"
                                        fieldLabel="Show Less Label"
                                        name="./showLessLabel"/>
                                     <clone
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
										fieldDescription="Clone Label"
                                        fieldLabel="Clone Label"
                                        name="./cloneLabel"/>
                                    <size
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
										fieldDescription="Size Label"
                                        fieldLabel="Size Label"
                                        name="./sizeLabel"/>
                                     <status
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
										fieldDescription="Status Label"
                                        fieldLabel="Status Label"
                                        name="./statusLabel"/>
                                    <catno
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
										fieldDescription="Cat No. Label"
                                        fieldLabel="Cat No. Label"
                                        name="./catNoLabel"/>
                                    <productImgAltText
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
										fieldDescription="Prdouct Img Alt Text Label"
                                        fieldLabel="Prdouct Img Alt Text Label"
                                        name="./productImgAltText"/>
                                    <yourPrice
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
										fieldDescription="Your Price Label"
                                        fieldLabel="Your Price Label"
                                        name="./yourPrice"/>
                                    <listPrice
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
										fieldDescription="List Price Label"
                                        fieldLabel="List Price Label"
                                        name="./listPrice"/>
                                     <signIn
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
										fieldDescription="Sign In Label Label"
                                        fieldLabel="Sign In Label"
                                        name="./signIn"/>
                                    <showCount
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                        fieldDescription="Number of products to be displayed before “show more” is displayed to user. Please enter integer value."
                                        fieldLabel="Show Count"
                                        min="{Long}0"
                                        name="./showCount"/>
                                     <addToCart
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
										fieldDescription="Add to Cart Label"
                                        fieldLabel="Add to Cart Label"
                                        name="./addToCart"/>
                                      <cartAltText
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
										fieldDescription="Cart Alt Text Label"
                                        fieldLabel="Cart Alt Text Label"
                                        name="./cartAltText"/>
                                </items>
                            </column>
                        </items>
                    </columns>
                </items>
            </properties>
        </items>
    </content>
</jcr:root>
